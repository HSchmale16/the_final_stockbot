<form hx-put="/htmx/tag/{{ Tag.ID }}/edit">
    <div class="mb-3">
        <label for="css_color">Category Type</label>
        <select class="form-select" name="css_color">
            {{#each CssColorTypes }}
            <option value="{{this}}" {{#if (eq this Tag.CssColor)}}selected{{/if}}>{{this}}</option>
            {{/each}}
        </select>
    </div>


    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="hidden" value="{{ Tag.Hidden }}" />
        <label class="form-check-label" for="hidden">Hidden</label>
    </div>

    <div class="mb-3">
        <textarea class="form-control" name="short_line" placeholder="Short Description" type=="text"
           rows="3">{{ Tag.ShortLine }}</textarea>
    </div>


    <button class="btn btn-success">Submit</button>
    <button class="btn btn-danger" hx-get="/htmx/tag/{{ Tag.ID }}/wiki">Cancel</button>
</form>