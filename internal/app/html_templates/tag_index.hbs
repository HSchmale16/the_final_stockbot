<div class="container">
    <h1>Tag Index - {{ Tag.Name }}</h1>
    <ul>
        {{#each Items }}
        <li>
            <h2><a href="/law/{{ ID }}?tagId={{ Tag.ID }}">{{{ Title }}}</a></h2>
            <small>Published on {{formatDate PubDate }} | Loaded On {{ formatDate CreatedAt }}</small>
            <p>
                {{ Metadata.OfficialTitle }} <br />
                {{#each Metadata.Actions }}
                <strong>{{ Date }}:</strong> {{ Text }}<br />
                <br />
                {{/each}}
                <a href="/law/{{ ID }}">Read more</a>
            </p>

            <div class="tags">
                {{#each Tags }}
                <span class="tag"><a href="/tag/{{ ID }}">{{ Name }}</a></span>
                {{/each}}
            </div>
        </li>
        {{/each}}
    </ul>
</div>