<div class="container">
    <h1>{{{ Law.Title }}}</h1>

    <div class="bill-metadata">
        <h2>Bill Metadata</h2>

        <p>Publish Date: {{ formatDate Law.PubDate }}</p>
        <p>Scanned and Processed on: {{ formatDate Law.CreatedAt }}</p>

        {{#if Law.Metadata.OfficialTitle }}
        <p>Official Title: {{ Law.Metadata.OfficialTitle }}</p>
        {{/if}}


        <h3>Actions</h3>
        <ul>
            {{#each Law.Metadata.Actions }}
            <li><strong>{{ Date }}:</strong> {{ Text }}</li>
            <br />
            {{/each}}
        </ul>

        {{#if Law.Sponsors }}
        <h3>Congress Members</h3>
        <ul>
            {{#each Law.Sponsors }}
            <li class="{{ this.Role}}"><a href="/congress-member/{{ BioGuideId }}">
                    {{ Name }} ({{Party}} - {{State}})
                </a></li>
            {{/each}}
        </ul>
        {{/if}}
    </div>

    <hr />

    {{#if RenderMods }}
    <pre>{{ LawText.ModsXML }}</pre>
    {{else}}
    <pre>{{ LawText.Text }}</pre>
    {{/if}}

    <h1>Tags Applied To Legislation</h1>
    <div class="tags" hx-get="/law/{{ Law.ID }}/tags" hx-trigger="revealed" hx-swap="afterend">
    </div>
</div>