    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>State</th>
                <th>Party</th>
                <th>Bills</th>
                <th>Important Dates</th>
                <th>Current Member</th>
            </tr>
        </thead>
        <tbody>
            {{#each WorksWith }}
            <tr>
                <td><a href="/congress-member/{{this.BioGuideId}}">{{this.Name}}</a></td>
                <td>{{this.State}}</td>
                <td>{{firstChar this.Party }}</td>
                <td class="align-right">{{this.Count}}</td>
                <td>
                    {{#if this.CongressMemberInfo.Bio.Birthday}}
                    {{ formatDate this.CongressMemberInfo.Bio.Birthday }}
                    {{else}}
                    Not Available
                    {{/if}} <br/>
                    <abbr title="Date first took office">{{ formatDate this.TookOfficeOn }}</abbr>
                </td>
                <td>{{ this.IsActiveMember }}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
