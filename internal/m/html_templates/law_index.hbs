<div>
    <h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl">{{ Title }}</h1>

    <div class="grid sm:max-sm:grid-cols-2 md:grid-cols-4 gap-10">
        <div class="flex  md:max-w-xl mx-4 rounded shadow"> 
            {{> 'partials/bar-button-item' URL="/laws" Label="All Laws" T1="" T2=LawType }}
        </div>
        <div class="flex  md:max-w-xl mx-4 rounded shadow"> 
            {{> 'partials/bar-button-item' URL="/laws?type=" Label="House Bills" T1="H.R." T2=LawType}}
            {{> 'partials/bar-button-item' URL="/laws?type=" Label="House Resolutions" T1="H. Res." T2=LawType}}
            {{> 'partials/bar-button-item' URL="/laws?type=" Label="House Joint Resolutions" T1="H.J." T2=LawType}}
        </div>

        <div class="flex  md:max-w-xl mx-4 rounded shadow"> 
            {{> 'partials/bar-button-item' URL="/laws?type=" Label="Senate Bills" T1="S." T2=LawType}}
            {{> 'partials/bar-button-item' URL="/laws?type=" Label="Senate Resolutions" T1="S. Res." T2=LawType}}
            {{> 'partials/bar-button-item' URL="/laws?type=" Label="Senate Joint Resolutions" T1="S.J." T2=LawType}}
        </div>

        <div class="flex  md:max-w-xl mx-4 rounded shadow"> 
            {{> 'partials/bar-button-item' URL="/laws?type=" Label="Public Laws" T1="Public" T2=LawType}}
        </div>
    </div>

    {{> 'partials/law-list' EnableLoad=true }}
</div>