# Default server configuration
server {

    root {{ static_root }}; # Replace this with the path to your single page app files

    index index.html;

    server_name {{ server_name }};

    location / {
        proxy_pass http://localhost:8080; # Replace with your Gunicorn server address
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        # Raise the proxy read time out
        proxy_read_timeout 300s;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }

    location /static {
        gzip on;
        gzip_types application/javascript text/javascript;
        try_files $uri $uri/ /index.html;
    }


}

